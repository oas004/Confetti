fastlane_version "2.68.0"

default_platform :android

platform :android do

    versionNum = 71
    wearVersionNum = 72


    before_all do
    end

    desc "Runs all the tests"
    lane :test do
        gradle(task: "test")
    end

    lane :wearScreenshots do
        build_android_app(
            task: 'wearApp:assemble',
            build_type: 'Debug'
        )
        build_android_app(
            task: 'wearApp:assemble',
            build_type: 'AndroidTest'
        )
        capture_android_screenshots(
            locales: ["en-US"],
            clear_previous_screenshots: true,
            app_apk_path: "./wearApp/build/outputs/apk/debug/wearApp-debug.apk",
            tests_apk_path: "./wearApp/build/outputs/apk/androidTest/debug/wearApp-debug-androidTest.apk",
            device_type: "wear",
            skip_open_summary: true,
            use_tests_in_classes: "dev.johnoreilly.confetti.wear.ScreenshotTest"
        )
        git_add(path: "./fastlane/metadata")
    end


    desc "Deploy app to play store alpha channel"
    lane :deployAlpha do |options|

        gradle(task: 'clean')
        gradle(
              task: ":androidApp:bundleRelease",
              properties: {
                  'versionNum' => versionNum
              }
        )

        supply(
            package_name: "dev.johnoreilly.confetti",
            track: "alpha",
            aab: "androidApp/build/outputs/bundle/release/androidApp-release.aab",
            skip_upload_apk: true,
            skip_upload_metadata: true,
            skip_upload_images: true,
            skip_upload_screenshots: true
        )
    end


    lane :deployInternalTest do |options|
        gradle(task: 'clean')
        gradle(
              task: ":androidApp:bundleRelease",
              properties: {
                  'versionNum' => versionNum
              }
       )
        gradle(
              task: ":wearApp:bundleRelease",
              properties: {
                  'versionNum' => wearVersionNum
              }
        )

        supply(
            package_name: "dev.johnoreilly.confetti",
            track: "internal",
            aab_paths: [
                "androidApp/build/outputs/bundle/release/androidApp-release.aab",
                "wearApp/build/outputs/bundle/release/wearApp-release.aab"
            ],
            skip_upload_apk: true,
            skip_upload_metadata: true,
            skip_upload_images: true,
            skip_upload_screenshots: true
        )
    end


    lane :buildApp do |options|
        gradle(task: 'clean')
        gradle(
              task: ":androidApp:bundleRelease",
              properties: {
                  'versionNum' => versionNum
              }
        )
    end

    lane :buildWearApp do |options|
        gradle(task: 'clean')
        gradle(
              task: ":wearApp:bundleRelease",
              properties: {
                  'versionNum' => wearVersionNum
              }
        )
    end

    lane :buildAppApk do |options|
        gradle(task: 'clean')
        gradle(
              task: ":androidApp:assembleRelease",
              properties: {
                  'versionNum' => versionNum
              }
        )
    end


    desc "Promote app from alpha to production in Play Store"
    lane :promoteAppToProd do |options|

        supply(
            package_name: "dev.johnoreilly.confetti",
            track: "internal",
            track_promote_to: "production",
            skip_upload_apk: true,
            skip_upload_metadata: true,
            skip_upload_images: true,
            skip_upload_screenshots: true,
            version_code: 1001086
        )
    end


  # You can define as many lanes as you want

  after_all do |lane|
    # This block is called, only if the executed lane was successful
  end

  error do |lane, exception|
    # slack(
    #   message: exception.message,
    #   success: false
    # )
  end
end
